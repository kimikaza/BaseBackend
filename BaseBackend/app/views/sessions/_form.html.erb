<%= form_for @user, {:url => sessions_path} do |f| %>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="actions"><%= submit_tag "Log in" %></div>
<% end %>